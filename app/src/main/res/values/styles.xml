<resources>

	<style name="fenetre_telephone">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:orientation">vertical</item>
		<item name="android:padding">@dimen/marge2</item>
	</style>


	<style name="mot">
		<item name="android:textSize">@dimen/texte</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">@dimen/marge1</item>
	</style>

	<style name="ligne">
		<item name="android:textSize">@dimen/texte</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:state_multiline">false</item>
	</style>

	<style name="ligne2" parent="ligne">
		<item name="android:layout_weight">1</item>
	</style>

	<style name="section" parent="ligne">
		<item name="android:orientation">horizontal</item>
		<item name="android:layout_marginBottom">@dimen/marge4</item>
	</style>

	<style name="titre" parent="ligne">
		<item name="android:layout_marginBottom">@dimen/marge1</item>
		<item name="android:textAlignment">center</item>
		<item name="android:textSize">@dimen/titre</item>
		<item name="android:textStyle">bold</item>
	</style>


	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

	<style name="AppTheme.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
