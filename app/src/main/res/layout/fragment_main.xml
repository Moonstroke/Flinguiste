<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
                                              tools:context="fr.joh1.android.flinguiste.FragmentActivityPrincipale" tools:showIn="@layout/activity_principale"
                                              android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:padding="@dimen/marge2">


	<!-- Nouveau jeu de vocabulaire -->
	<TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/marge1" android:text="@string/titre_jeu_vocab" android:textSize="@dimen/titre" android:textAlignment="center"/>
	<android.support.v7.widget.LinearLayoutCompat android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="@dimen/marge4">
		<android.support.v7.widget.AppCompatButton android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/texte_nv_jeu" android:onClick="nvJeuVocab"/>
		<Spinner android:id="@+id/s__niv_vocab" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="2"/>
	</android.support.v7.widget.LinearLayoutCompat>

	<!-- Nouveau jeu sur les expressions -->
	<TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/marge1" android:text="@string/titre_jeu_expr" android:textSize="@dimen/titre" android:textAlignment="center"/>
	<android.support.v7.widget.LinearLayoutCompat android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="@dimen/marge4">
		<Button android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/texte_nv_jeu" android:onClick="nvJeuExpr"/>
		<Spinner android:id="@+id/s__niv_expr" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="2"/>
	</android.support.v7.widget.LinearLayoutCompat>

	<!-- Ouvrir les paramÃ¨tres -->
	<Button android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/parametres" android:onClick="param"/>

</android.support.v7.widget.LinearLayoutCompat>
